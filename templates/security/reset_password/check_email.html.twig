{% extends '@XutimSecurity/security/security_base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <div class="page page-center">
        <div class="container container-tight py-4">
            <p class="fs-h3 text-secondary">
                If an account matching your email exists, then an email was just
                sent that contains a link that you can use to reset your
                password. This link will expire in
                {{
                    resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle')
                }}.
            </p>
            <p class="fs-h3 text-secondary">
                If you don't receive an email please check your spam folder or
                <a href="{{ path('admin_forgot_password_request') }}"
                >try again</a>.
            </p>
        </div>
    </div>
{% endblock %}
