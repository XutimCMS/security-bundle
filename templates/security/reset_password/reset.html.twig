{% extends '@XutimSecurity/security/security_base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="page page-center">
        <div class="container container-tight py-4">
            <h1>Reset your password</h1>

            {% for message in app.flashes('reset_password_error') %}
                {{
                    component('Xutim:Admin:Alert', {
                        type: 'reset_password_error',
                        message: message,
                    })
                }}
            {% endfor %}

            {{
                form_start(resetForm, {attr: {novalidate: 'novalidate', 'data-turbo': 'false'}})
            }}
            {{ form_row(resetForm.plainPassword.first) }}
            {{ form_row(resetForm.plainPassword.second) }}

            <button type="submit" class="btn btn-primary">
                Reset password
            </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
